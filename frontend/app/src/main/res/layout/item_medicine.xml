<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:backgroundTint="#F5F5F5"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nama Obat -->
        <TextView
            android:id="@+id/medicineNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2C7BBE"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"/>

        <!-- Dosis -->
        <TextView
            android:id="@+id/dosageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <!-- Frekuensi -->
        <TextView
            android:id="@+id/frequencyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <!-- Harga -->
        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="#2C7BBE"
            android:textSize="16sp"/>

        <!-- Status Pembelian -->
        <TextView
            android:id="@+id/purchaseStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="italic"
            android:textColor="#6B6B6B"
            android:textSize="14sp"/>

        <!-- Tombol Ubah Status -->
        <Button
            android:id="@+id/changeStatusButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ubah Status"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2C7BBE"
            android:drawablePadding="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
